        <!-- Header-->
        <header class="bloque bg-gradient text-white">
            <div class="container px-4 text-center">
                <h1 class="fw-bolder">¡&nbsp;R&nbsp;E&nbsp;G&nbsp;&Iacute;&nbsp;S&nbsp;T&nbsp;R&nbsp;A&nbsp;T&nbsp;E&nbsp;!</h1>
                <p class="lead"> Crea tu usuario </p>
                <p class="lead"> Completa los siguientes campos: </p>
            </div>
        </header>
        <!-- Form section-->
        <section id="form">
            <div> <center>
            <form action="/Registrar" id="formulario" method="post">

                <fieldset>
                    <label for= "NombreUsu"> <h4> Nombre: </h4> </label>
                    <input type="text" name="NombreUsu" id="NombreUsu" placeholder="Nombre"/>
                    <br>
                    <br>
                    <label for= "ApellidoPaUsu"> <h4> Apellido Paterno: </h4> </label>
                    <input type="text" name="ApellidoPaUsu" id="ApellidoPaUsu" placeholder="Apellido Paterno"/>
                    <br>
                    <br>
                    <label for= "ApellidoMaUsu"> <h4> Apellido Materno: </h4> </label>
                    <input type="text" name="ApellidoMaUsu" id="ApellidoMaUsu" placeholder="Apellido Materno"/>
                    <br>
                    <br>
                    <label for= "Email"> <h4> Email: </h4> </label>
                    <input type="email" name="EmailUsu" id="EmailUsu" placeholder="Correo electr&oacute;nico"/>
                    <br>
                    <br>
                    <label for= "Contraseña"> <h4> Contrase&ntilde;a:  </h4></label>
                    <input type="password" name="ContrasenaUsu" id="passwd" placeholder="Contraseña"/>
                    <br>
                    <br>
                    <label for= "Contraseña"> <h4> Confirme su Contrase&ntilde;a:  </h4></label>
                    <input type="password" name="Contrasena2" id="passwdConfirm" placeholder="Contraseña"/>
                    <br>
                    <br>
                    <button id="register" class="btn btn-lg btn-info btn-block" type="submit" >Registrarse</button>
                    <br>
                    <br>
                </fieldset>

            </form>    
            </section>
