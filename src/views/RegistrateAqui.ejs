        <% if(typeof alert != "undefined") { %>
    
            <script>
                swal.fire({
                    title:'<%= alertTitle %>',
                    text:'<%= alertMessage %>',
                    icon:'<%= alertIcon %>',
                    showConfigButton: '<%=showConfirmButton%>',
                    timer: '<%=timer%>'
                }).then(()=>{
                    window.location='/RegistrateAqui'
                })
            </script>
            <% } %>
